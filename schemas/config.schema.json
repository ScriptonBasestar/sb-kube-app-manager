{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "App Group Configuration Schema",
    "type": "object",
    "required": ["namespace", "apps"],
    "properties": {
      "namespace": {
        "type": "string"
      },
      "cluster": {
        "type": "string"
      },
      "deps": {
        "type": "array",
        "items": { "type": "string" },
        "default": []
      },
      "apps": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["name", "type", "specs"],
          "properties": {
            "name": { "type": "string" },
            "type": {
              "type": "string",
              "enum": [
                "exec",
                "copy-repo", "copy-chart", "copy-root", "copy-app",
                "install-helm", "install-yaml", "install-kustomize",
                "pull-helm", "pull-helm-oci", "pull-git", "pull-http"
              ]
            },
            "path": { "type": "string" },
            "namespace": { "type": "string" },
            "enabled": { "type": "boolean" },
            "repo": { "type": "string" },
            "specs": {
              "type": "object",
              "oneOf": [
                {
                  "description": "exec command spec",
                  "properties": {
                    "commands": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "required": ["commands"]
                },
                {
                  "description": "install-helm spec",
                  "properties": {
                    "values": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "required": ["values"]
                },
                {
                  "description": "install-yaml spec",
                  "properties": {
                    "files": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "required": ["files"]
                },
                {
                  "description": "pull-helm spec",
                  "properties": {
                    "repo": { "type": "string" },
                    "chart": { "type": "string" },
                    "dest": { "type": "string" },
                    "chart_version": { "type": "string" },
                    "app_version": { "type": "string" },
                    "removes": {
                      "type": "array",
                      "items": { "type": "string" }
                    },
                    "overrides": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  },
                  "required": ["repo", "chart", "dest"]
                },
                {
                  "description": "pull-git spec",
                  "properties": {
                    "repo": { "type": "string" },
                    "paths": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["src", "dest"],
                        "properties": {
                          "src": { "type": "string" },
                          "dest": { "type": "string" }
                        }
                      }
                    }
                  },
                  "required": ["repo", "paths"]
                },
                {
                  "description": "pull-http spec",
                  "properties": {
                    "url": { "type": "string", "format": "uri" },
                    "paths": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": ["src", "dest"],
                        "properties": {
                          "src": { "type": "string" },
                          "dest": { "type": "string" }
                        }
                      }
                    }
                  },
                  "required": ["url", "paths"]
                }
              ]
            }
          }
        }
      }
    }
  }