{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Config Schema",
    "type": "object",
    "required": ["namespace", "apps"],
    "properties": {
      "namespace": {
        "type": "string"
      },
      "cluster": {
        "type": "string"
      },
      "deps": {
        "type": "array",
        "items": { "type": "string" },
        "default": []
      },
      "apps": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["name", "type", "specs"],
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "exec",
                "copy-repo", "copy-chart", "copy-root", "copy-app",
                "install-helm", "install-yaml", "install-kustomize",
                "pull-helm", "pull-helm-oci", "pull-git", "pull-http"
              ]
            },
            "path": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean"
            },
            "repo": {
              "type": "string"
            },
            "specs": {
              "type": "object"
            }
          }
        }
      }
    }
  }
  